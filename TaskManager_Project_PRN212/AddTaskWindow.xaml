<Window x:Class="TaskManager_Project_PRN212.AddTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager_Project_PRN212"
        mc:Ignorable="d"
        Title="Thêm công việc mới" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Tên công việc:" FontWeight="Bold"/>
            <TextBox x:Name="txtTaskName" Width="300" Height="26"/>

            <TextBlock Text="Mô tả công việc:" FontWeight="Bold" Height="21"/>
            <TextBox x:Name="txtDescription" Width="300" Height="27" TextWrapping="Wrap" AcceptsReturn="True"/>
            <TextBlock Text="Danh mục:" Height="15" FontWeight="Bold"/>
            <ComboBox x:Name="cbCategory" Width="300" DisplayMemberPath="Name" SelectedValuePath="Id" Height="28"/>

            <TextBlock Text="Hạn chót:" FontWeight="Bold" Margin="0,10,0,0"/>
            <StackPanel Orientation="Horizontal" RenderTransformOrigin="0.626,0.486" Width="299">
                <DatePicker x:Name="dpDueDate" Width="107"/>
                <ComboBox x:Name="cbHour" Width="60">
                    <ComboBoxItem Content="00" IsSelected="True"/>
                    <ComboBoxItem Content="01"/>
                    <ComboBoxItem Content="02"/>
                    <ComboBoxItem Content="03"/>
                    <ComboBoxItem Content="04"/>
                    <ComboBoxItem Content="05"/>
                    <ComboBoxItem Content="06"/>
                    <ComboBoxItem Content="07"/>
                    <ComboBoxItem Content="08"/>
                    <ComboBoxItem Content="09"/>
                    <ComboBoxItem Content="10"/>
                    <ComboBoxItem Content="11"/>
                    <ComboBoxItem Content="12"/>
                    <ComboBoxItem Content="13"/>
                    <ComboBoxItem Content="14"/>
                    <ComboBoxItem Content="15"/>
                    <ComboBoxItem Content="16"/>
                    <ComboBoxItem Content="17"/>
                    <ComboBoxItem Content="18"/>
                    <ComboBoxItem Content="19"/>
                    <ComboBoxItem Content="20"/>
                    <ComboBoxItem Content="21"/>
                    <ComboBoxItem Content="22"/>
                    <ComboBoxItem Content="23"/>
                </ComboBox>
                <TextBlock Text=":"/>
                <ComboBox x:Name="cbMinute" Width="60">
                    <ComboBoxItem Content="00" IsSelected="True"/>
                    <ComboBoxItem Content="15"/>
                    <ComboBoxItem Content="30"/>
                    <ComboBoxItem Content="45"/>
                </ComboBox>
            </StackPanel>

            <TextBlock Text="Trạng thái:" FontWeight="Bold" Margin="0,10,0,0" Height="19"/>
            <ComboBox Name="cbStatus" Width="298" Height="24">
                <ComboBoxItem Content="Chưa bắt đầu" IsSelected="True"/>
                <ComboBoxItem Content="Đang thực hiện"/>
                <ComboBoxItem Content="Hoàn thành"/>
            </ComboBox>


            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Lưu" Width="80" Click="btnSave_Click" Margin="5"/>
                <Button Content="Hủy" Width="80" Click="btnCancel_Click" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
