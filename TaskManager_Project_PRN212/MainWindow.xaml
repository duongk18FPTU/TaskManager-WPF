<Window x:Class="TaskManager_Project_PRN212.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:TaskManager_Project_PRN212"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid Margin="10">
        <StackPanel>
            <Menu>
                
                <MenuItem FontStyle="Italic" Header="Đăng xuất" Click="Logout_Click"/>
                
                <TextBlock x:Name="txtWelcome" Text="Xin chào" Margin="10,5,10,5" FontWeight="Bold" />
            </Menu>

            <TextBlock Text="Danh sách công việc" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Lọc theo trạng thái: " VerticalAlignment="Center"/>
                <ComboBox Name="cbStatusFilter" Width="150">
                    <ComboBoxItem Content="Tất cả" IsSelected="True"/>
                    <ComboBoxItem Content="Chưa bắt đầu"/>
                    <ComboBoxItem Content="Đang thực hiện"/>
                    <ComboBoxItem Content="Hoàn thành"/>
                </ComboBox>
                <Button Content="Lọc" Click="FilterTask_Click" Margin="10,0,0,0"/>

                <TextBlock Text="Tìm kiếm: " VerticalAlignment="Center" Margin="20,0,5,0"/>
                <TextBox Name="txtSearch" Width="200" VerticalAlignment="Center" TextChanged="SearchTasks_TextChanged"/>
            </StackPanel>

            <DataGrid Name="dgTasks" AutoGenerateColumns="False" Height="300">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Tên công việc" Binding="{Binding Title}" Width="*"/>
                    <DataGridTextColumn Header="Mô tả" Binding="{Binding Description}" Width="150"/>
                    <DataGridTextColumn Header="Hạn chót" Binding="{Binding DueDate}" Width="150"/>
                    <DataGridTextColumn Header="Danh mục" Binding="{Binding Category.Name}" Width="120"/>
                    <DataGridTextColumn Header="Trạng thái" Binding="{Binding Status}" Width="100"/>
                    <DataGridTemplateColumn Header="Hành động" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Sửa" Click="EditTask_Click" Margin="5,0"/>
                                    <Button Content="Xóa" Click="DeleteTask_Click" Margin="5,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <Button Name="btnAddTask" Content="Thêm công việc mới" Width="200" Height="30" 
                    Margin="0,10,0,0" Click="btnAddTask_Click"/>
        </StackPanel>
    </Grid>
</Window>