<Window x:Class="TaskManager_Project_PRN212.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager_Project_PRN212"
        mc:Ignorable="d"
        Title="Đăng nhập tài khoản" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Tên đăng nhập:" Margin="180,69,-150,0" VerticalAlignment="Top"/>
        <TextBox Name="txtUsername" Width="250" Height="30" Margin="30,70,0,0" VerticalAlignment="Top"/>

        <TextBlock Text="Mật khẩu:" Margin="180,130,-150,0" VerticalAlignment="Top"/>
        <PasswordBox Name="txtPassword" Width="250" Height="30" Margin="30,130,0,0" VerticalAlignment="Top"/>

        <Button Name="btnLogin" Content="Đăng nhập" Width="250" Height="30" Margin="30,180,0,0" VerticalAlignment="Top" Click="btnLogin_Click"/>

        <TextBlock Margin="290,241,-260,0" VerticalAlignment="Top">
            <Run Text="Chưa có tài khoản?"/>
            <Hyperlink Click="Register_Click">Đăng ký</Hyperlink>
        </TextBlock>
    </Grid>
</Window>
